        <Button
            android:id="@+id/btnSaida"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:text="Saída"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:paddingTop="10dp"
        android:background="#FFF"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linearBottomLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnKitCadastroManual"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="Cadastrar Manualmante"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnActivateMultipleRegistration"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:text="Iniciar Cadastro Múltiplo"
            android:textSize="17dp"
            android:textStyle="bold"/>

    </LinearLayout>



